{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<style>    
    .btn-margin { margin-top: 1em;} 
    .center { text-align: center; }   
     .buttons {
        width: 100%;
        table-layout: fixed;
        border-collapse: collapse;        
    }
</style>

<form method="post">
    {% if error %}
        <div class="alert alert-danger">Sorry, we couldn't find an account with this username. Please check you're using the right username and try again.</div>
    {% endif %}

    {% if app.user %}
        <div class="md-6">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="container col-md-4">

        <h1 class="h3 mb-3 font-weight-normal btn-margin center">Sign in!</h1>
        
        <label for="inputEmail">Email</label>
        <input type="username" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
        <button class="btn btn-lg btn-primary btn-margin buttons" type="submit"> Login </button>
        <a href="/register" class="btn btn-lg btn-primary btn-margin buttons">Register</a>
      
    </div>   
</form>

{% endblock %}
